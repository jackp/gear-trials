#header.navbar.navbar-fixed-top
	.navbar-inner
		.container
			a(href='/')
				img(src='/img/header.png')
			.pull-right
				- if(session.user)
					.btn-group
						button.btn.dropdown-toggle(data-toggle='dropdown', href='#') #{session.user.name}
							span.caret
						ul.dropdown-menu
							li
								a(href='/admin') Admin
							li
								a(href='/logout') Logout
				- else
					a.btn(href='#login_modal', data-toggle="modal") Login
					

